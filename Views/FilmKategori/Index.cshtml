@model IEnumerable<OMDb.Models.FilmKategori>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kategori)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.Kategori_Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film.Film_Aciklamasi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FilmKategoriId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FilmKategoriId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FilmKategoriId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
