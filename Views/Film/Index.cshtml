@model IEnumerable<OMDb.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film_Adi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film_Aciklamasi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film_URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film_Kategorileri)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Film_Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film_Aciklamasi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film_URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film_Kategorileri)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FilmId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FilmId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FilmId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
